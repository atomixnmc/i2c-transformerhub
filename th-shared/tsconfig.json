{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "build", "out", "**/*.test.ts", "**/*.spec.ts", "**/*.test.js", "**/*.spec.js"]
}